/ {
    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;
        // No rows or columns needed for the dongle
    };
};

bluetooth: bluetooth {
    compatible = "zmk,bluetooth";
    // Additional properties for Bluetooth configuration
};

chosen {
    zmk,ble = &bluetooth; // Reference to the defined Bluetooth node
};